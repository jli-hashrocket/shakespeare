<table cellpadding=0, cellspacing=0, border=0>
  <tr><td colspan=5><%= paginate @speakers %></td></tr>

  <tr>
    <th>Role</th>
    <th># of Lines Spoken</th>
    <th>Longest Speech</th>
    <th># of Scenes</th>
    <th>% of Total Scenes</th>
  </tr>
  <% @speakers.each do |speaker| %>
    <tr>
      <td><%= speaker.name %></td>
      <td><%= speaker.lines.size %></td>
    </tr>
  <% end %>
</table>

